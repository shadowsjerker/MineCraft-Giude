<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MineCraft_Guide.HomePage"
             Title="Home"
             BackgroundColor="#BEB8EB"
             NavigationPage.BackButtonTitle="بازگشت"
             >
    
    <ContentPage.Content>
        <StackLayout Margin="5" Padding="5" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Text="سرچ آیتم" FontSize="28" Clicked="Button_Clicked" HeightRequest="100" WidthRequest="200" BackgroundColor="#20FC8F" CornerRadius="5" Grid.Column="0" Grid.Row="2"/>
                <Button Text="راهنمای بازی" FontSize="28" Clicked="Button_Clicked2" HeightRequest="100" WidthRequest="200" BackgroundColor="#20FC8F" CornerRadius="5" Grid.Column="0" Grid.Row="3"/>
            </Grid>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>