<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MineCraft_Guide.Page2"
             Title="Search"
             HeightRequest="533"
             WidthRequest="300"
             BackgroundColor="#BEB8EB"
             NavigationPage.BackButtonTitle="برگشت به خانه"
             >

    
    
    <ContentPage.Content>
        
        

        <StackLayout Margin="10" Spacing="5">

            <Entry Placeholder="آیتم مورد نظر را سرچ کنید:" PlaceholderColor="#363457" IsSpellCheckEnabled="true" 
                   ClearButtonVisibility="WhileEditing"  x:Name="userGet" VerticalOptions="StartAndExpand" 
                   TextChanged="userGet_TextChanged" BackgroundColor="#00000000"
                   ReturnType="Done" TextColor="#1a1a1a" FontSize="Large" FontAttributes="None"/>

            <!--<Button x:Name="testButton" Text="Search"  Clicked="testButtonClicked"  Background="PowderBlue"  VerticalOptions="StartAndExpand"/>-->

            <!--<Editor x:Name="userInput" Text=""  VerticalOptions="FillAndExpand"/>-->

            <ListView VerticalOptions="CenterAndExpand" x:Name="sList"
                  IsVisible="true"
                  HasUnevenRows="true" >

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">

                                <StackLayout >
                                    <Label Text="{Binding name}" FontSize="20"/>

                                    <Label Text="{Binding detail}" FontSize="15"/>

                                </StackLayout>

                                <StackLayout >
                                    <Image Source="{Binding imageSource}" HeightRequest="100"/>
                                </StackLayout>


                            </Grid>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--<Image HeightRequest="300" Source="https://shadowsjerker.github.io/imageSource/164.png" VerticalOptions="FillAndExpand"/>-->
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
